{
  "name": "cypress-cucumber-e2e-tests",
  "version": "1.0.0",
  "description": "Cypress Cucumber E2E Test Framework",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "npm run clean:results && npm run clean:docker && npm run clean:modules",
    "clean:modules": "rimraf ./node_modules",
    "clean:results": "rimraf ./cypress/reports ./cypress/videos ./cypress/screenshots ./cypress/downloads",
    "clean:docker": "rimraf ./.docker",
    "cy:open:prod": "npx cypress open --env ENV=prod",
    "cy:open:local": "npx cypress open --env ENV=local",
    "cy:run:prod": "npx cypress run --env ENV=prod",
    "cy:run:local": "npx cypress run --env ENV=local",
    "cy:cloud:run:local": "CURRENTS_API_URL='http://localhost:1234' cypress-cloud run --record --key secret_key --parallel --ci-build-id `date +%Y-%m-%d`",
    "cy:cloud:run:minikube": "CURRENTS_API_URL='http://kube.local:1234' cypress-cloud run --record --key secret_key --parallel --ci-build-id local_`date +%Y-%m-%d`",
    "docker:build": "docker build . -t e2e"
  },
  "keywords": [
    "Cypress",
    "JS",
    "JavaScript",
    "Cucumber",
    "Gherkin"
  ],
  "author": "Levi9",
  "license": "ISC",
  "devDependencies": {
    "@badeball/cypress-cucumber-preprocessor": "^18.0.3",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@cypress/xpath": "^2.0.3",
    "@faker-js/faker": "^8.0.2",
    "cypress": "^12.17.3",
    "cypress-cloud": "^1.9.3",
    "cypress-on-fix": "^1.0.2",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-chai-friendly": "^0.7.2",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.28.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.1"
  }
}
